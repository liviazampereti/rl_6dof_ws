<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="base_footprint"/>

    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/base_link.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0.04" rpy="0 0 0"/>
            <material name="light_black"/>
        </visual>

        <xacro:base_inertia xyz="0 2.679e-8 0.01026544" rpy="0 0 0" />

        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.07" />
            </geometry>
            <origin xyz="0 0 0.035" rpy="0 0 0"/>
        </collision>

        
    </link>

    <link name="arm1_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_1.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="salmon"/>
        </visual>

        <xacro:arm1_inertia xyz="0 -0.00016159 0.14671717" rpy="0 0 0" />

        <collision>
            <geometry>
                <box size="0.15 0.20 0.275" />
            </geometry>
            <origin xyz="0 0 0.1375" rpy="0 0 0"/>
        </collision>

    </link>

    <link name="arm2_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_2.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 -${pi/2.0}"/>
            <material name="yellow"/>
        </visual>

        <xacro:arm2_inertia xyz="-0.00008884 0 0.47500021" rpy="0 0 -${pi/2.0}" />

        <collision>
            <geometry>
                <box size="0.15 0.20 1.10" />
            </geometry>
            <origin xyz="0 0 0.475" rpy="0 0 0"/>
        </collision>

        

    </link>

    <link name="arm3_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_3.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
            <material name="purple"/>
        </visual>

        <xacro:arm3_inertia xyz="0.325 0 -0.00011793" rpy="0 ${pi/2} 0" />

        <collision>
            <geometry>
                <box size="0.15 0.20 0.80" />
            </geometry>
            <origin xyz="0.325 0 0" rpy="0 ${pi/2} 0"/>
        </collision>

        

    </link>

    <link name="arm4_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_4.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi} 0 0"/>
            <material name="green"/>
        </visual>

        <xacro:arm4_inertia xyz="0 0.0010614 -0.05328286" rpy="${pi} 0 0" />

        <collision>
            <geometry>
                <box size="0.15 0.20 0.275" />
            </geometry>
            <origin xyz="0 0 -0.0625" rpy="0 0 0"/>
        </collision>


        

    </link>

    <link name="arm5_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_5.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi} 0 ${pi}"/>
            <material name="blue"/>
        </visual>

        <xacro:arm5_inertia xyz="-0.0002301 0 -0.08772699" rpy="${pi} 0 ${pi}" />

        <collision>
            <geometry>
                <box size="0.20 0.15 0.175" />
            </geometry>
            <origin xyz="0 0 -0.0875" rpy="0 0 0"/>
        </collision>

        

    </link>

    <link name="arm6_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_6.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue_tifany"/>
        </visual>

        <xacro:arm6_inertia xyz="0 0 0.10531595" rpy="0 0 0" />

        <collision>
            <geometry>
                <box size="0.15 0.15 0.20" />
            </geometry>
            <origin xyz="0 0 0.10" rpy="0 0 0"/>
        </collision>

    </link>

    <joint name="base_joint" type="fixed">  
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz ="0 0 0" rpy="0 0 0" />
    </joint>

    <joint name="base_arm1_joint" type="continuous">  
        <parent link="base_link" />
        <child link="arm1_link" />
        <origin xyz ="0 0 0.07" rpy="0 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="arm1_arm2_joint" type="continuous">  
        <parent link="arm1_link" />
        <child link="arm2_link" />
        <origin xyz ="0 -0.20 0.20" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="arm2_arm3_joint" type="continuous">  
        <parent link="arm2_link" />
        <child link="arm3_link" />
        <origin xyz ="0 0.20 0.95" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="arm3_arm4_joint" type="continuous">  
        <parent link="arm3_link" />
        <child link="arm4_link" />
        <origin xyz ="0.65 -0.20 0" rpy="0 -${pi/2} 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="arm4_arm5_joint" type="continuous">  
        <parent link="arm4_link" />
        <child link="arm5_link" />
        <origin xyz ="0 0 -0.20" rpy="0 0 ${pi}" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="arm5_arm6_joint" type="continuous">  
        <parent link="arm5_link" />
        <child link="arm6_link" />
        <origin xyz ="0.10 0 -0.1" rpy="0 ${pi/2} 0" />
        <axis xyz="0 0 1" />
    </joint>



</robot>
