<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="base_footprint"/>

    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/base_link.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0.04" rpy="0 0 0"/>
            <material name="light_black"/>
        </visual>
    </link>

    <link name="arm_1_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_1.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="salmon"/>
        </visual>
    </link>

    <link name="arm_2_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_2.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 -${pi/2.0}"/>
            <material name="yellow"/>
        </visual>
    </link>

    <link name="arm_3_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_3.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
            <material name="purple"/>
        </visual>
    </link>

    <link name="arm_4_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_4.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi} 0 0"/>
            <material name="green"/>
        </visual>
    </link>

    <link name="arm_5_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_5.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi} 0 ${pi}"/>
            <material name="blue"/>
        </visual>
    </link>

    <link name="arm_6_link">
        <visual>
            <geometry>
                <mesh filename="package://6dof_arm_description/meshes/6dof_arm/link_6.stl" scale="1 1 1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue_tifany"/>
        </visual>
    </link>

    <joint name="base_joint" type="fixed">  
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz ="0 0 0" rpy="0 0 0" />
    </joint>

    <joint name="base_arm_1_joint" type="continuous">  
        <parent link="base_link" />
        <child link="arm_1_link" />
        <origin xyz ="0 0 0.07" rpy="0 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="arm_1_arm_2_joint" type="continuous">  
        <parent link="arm_1_link" />
        <child link="arm_2_link" />
        <origin xyz ="0 -0.20 0.20" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="arm_2_arm_3_joint" type="continuous">  
        <parent link="arm_2_link" />
        <child link="arm_3_link" />
        <origin xyz ="0 0.20 0.95" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="arm_3_arm_4_joint" type="continuous">  
        <parent link="arm_3_link" />
        <child link="arm_4_link" />
        <origin xyz ="0.65 -0.20 0" rpy="0 -${pi/2} 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="arm_4_arm_5_joint" type="continuous">  
        <parent link="arm_4_link" />
        <child link="arm_5_link" />
        <origin xyz ="0 0 -0.20" rpy="0 0 ${pi}" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="arm_5_arm_6_joint" type="continuous">  
        <parent link="arm_5_link" />
        <child link="arm_6_link" />
        <origin xyz ="0.10 0 -0.1" rpy="0 ${pi/2} 0" />
        <axis xyz="0 0 1" />
    </joint>



</robot>
